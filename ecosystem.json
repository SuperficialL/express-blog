{
  "apps": [
    {
      "name": "app",
      "script": "./app.js",
      "autorestart": true,
      "watch": false,
      "max_memory_restart": "500M",
      "exec_mode": "fork",
      "error_file": "./logs/app-err.log",
      "out_file": "./logs/app-out.log",
      "ignore_watch": ["node_modules"],
      "env": {
        "COMMON_ENV_VAR": "true"
      },
      "env_production": {
        "NODE_ENV": "production"
      }
    }
  ],
  "deploy": {
    "production": {
      "user": "root",
      "host": ["zhangwurui.net"],
      "port": "22",
      "repo": "git@github.com:SuperficialL/koa-server.git",
      "ref": "origin/master",
      "path": "/srv/koa-server",
      "post-deploy": "yarn && pm2 startOrRestart ecosystem.json --env production",
      "pre-deploy-local": "echo 'Deploy Done!'",
      "env": {
        "NODE_ENV": "production"
      }
    }
  }
}
